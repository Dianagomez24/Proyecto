<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Registro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">

<div class="container">
    <h2 class="mb-4">Registro de canciones</h2>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Nuevo registro
                </div>
                <div class="card-body">
                    <form action="/api/items" method="POST">
                        <label>Ingresa</label>
                        <input type="text" name="dato" class="form-control" required>
                        <button class="btn btn-primary w-100 mt-3">Guardar</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    Lista de cancion
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th>Dato</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% items.forEach(item => { %>
                                <tr>
                                    <td><%= item.dato %></td>
                                    <td>
                                        <button class="btn btn-warning btn-sm" onclick="editarItem('<%= item._id %>')">Editar</button>
                                        <button class="btn btn-danger btn-sm" onclick="eliminarItem('<%= item._id %>')">Eliminar</button>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEditar">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5>Editar</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="edit_id">
                <label>Dato</label>
                <input type="text" id="edit_dato" class="form-control">
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button class="btn btn-warning" onclick="guardarEdicion()">Actualizar</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
async function editarItem(id) {
    const res = await fetch('/api/items/' + id);
    const item = await res.json();

    document.getElementById('edit_id').value = item._id;
    document.getElementById('edit_dato').value = item.dato;

    new bootstrap.Modal(document.getElementById('modalEditar')).show();
}

async function guardarEdicion() {
    const id = document.getElementById('edit_id').value;
    const dato = document.getElementById('edit_dato').value;

    await fetch('/api/items/' + id, {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ dato })
    });

    location.reload();
}

async function eliminarItem(id) {
    if(confirm('Â¿Eliminar registro?')) {
        await fetch('/api/items/' + id, { method: 'DELETE' });
        location.reload();
    }
}
</script>

</body>
</html>
